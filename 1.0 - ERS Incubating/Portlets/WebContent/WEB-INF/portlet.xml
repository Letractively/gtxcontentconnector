<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	version="1.0">
	<portlet>
		<portlet-name>RESTPortlet</portlet-name>
		<portlet-class>com.gentics.cr.portlet.RESTPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>RESTPortlet</resource-bundle>
		<portlet-info>
			<title>Gentics REST</title>
		</portlet-info>
	</portlet>
	<portlet>
		<portlet-name>RESTContentPortlet</portlet-name>
		<portlet-class>com.gentics.cr.portlet.RESTContentPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>RESTPortlet</resource-bundle>
		<portlet-info>
			<title>Gentics REST Content</title>
		</portlet-info>
		<supported-processing-event>
			<name>GENTICS_REST_CONTENT</name>
		</supported-processing-event>
	</portlet>
	<portlet>
		<portlet-name>LuceneSearchPortlet</portlet-name>
		<portlet-class>com.gentics.cr.portlet.LuceneSearchPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>RESTPortlet</resource-bundle>
		<portlet-info>
			<title>Gentics Lucene Search</title>
		</portlet-info>
		<supported-publishing-event>
			<name>GENTICS_LUCENE_SEARCH</name>
		</supported-publishing-event>
	</portlet>
	<portlet>
		<portlet-name>TESTSenderPortlet</portlet-name>
		<portlet-class>com.gentics.cr.portlet.TESTSenderPortlet</portlet-class>
		<expiration-cache>-1</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>TESTSender</title>
		</portlet-info>
		<supported-publishing-event>
			<name>GENTICS_REST_CONTENT</name>
		</supported-publishing-event>
	</portlet>
	<event-definition>
		<name>GENTICS_REST_CONTENT</name>
	</event-definition>
</portlet-app>
